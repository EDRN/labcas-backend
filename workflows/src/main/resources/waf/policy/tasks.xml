<cas:tasks xmlns:cas="http://oodt.jpl.nasa.gov/1.0/cas">

  <!-- standard LabcasUploadInitTaskInstance task configured with WAF specific metadata  -->
  <task id="urn:edrn:WafInitTask" name="WafInitTask" class="gov.nasa.jpl.edrn.labcas.tasks.LabcasInitDatasetTaskInstance">
  
    <conditions />
    
    <configuration>
    
      <!--  UI workflow order -->
      <property name="workflow.order" value="4" />
    
      <!-- fixed dataset metadata -->
      <property name="dataset.ProductType" value="University_of_Colorado_Lung_Image" />
      
      <!-- FIXME: the following fields should be inherited from the Parent dataset 
           instead of being hard-wired here -->
      <property name="dataset.LeadPI" value="Wilbur A. Frankin" />
      <property name="dataset.CollaborativeGroup" value="Lung and Upper Aerodigestive" />
      <property name="dataset.OrganSite" value="Lung" />
      <property name="dataset.Description" value="University of Colorado Health Science Center (UCHSC) Lung Image" />
      <property name="dataset.ProtocolId" value="123" />
      <property name="dataset.ProtocolName" value="ABC" />
      <property name="dataset.Discipline" value="Pathology" />
      <property name="dataset.QAState" value="Public" />
      <property name="dataset.OwnerPrincipal" value="cn=Franklin University of Colorado Health Science Center,dc=edrn,dc=jpl,dc=nasa,dc=gov" />
      <!-- hyperlinks to: https://edrn.nci.nih.gov/sites/73-university-of-colorado-health-science-center -->
      <property name="dataset.SiteId" value="73" />
      <property name="dataset.ProtocolId" value="1000206" />
      <property name="dataset.ProtocolName" value="Lung Imaging Study" />
      
          
      <!-- input dataset metadata -->
      <property name="input.dataset.DatasetId.type" value="http://www.w3.org/2001/XMLSchema/string" />
      <property name="input.dataset.DatasetId.title" value="Dataset Identifier" />
      <property name="input.dataset.DatasetId.description" value="Enter a unique identifier for this data" />
      <property name="input.dataset.DatasetId.required" value="true" />
                              
    </configuration>
          
    <requiredMetFields>
    
      <metfield name="DatasetId" />
      
    </requiredMetFields>
    
  </task>
  
  <!-- Task that crawls $LABCAS_STAGING/$DatasetId and publishes files to $LABCAS_ARCHIVE/$ParentDatasetId/$DatasetId -->
  <task id="urn:edrn:WafCrawlTask" name="WafCrawlTask" class="org.apache.oodt.cas.pge.StdPGETaskInstance">
  
    <conditions />
  
    <configuration>
      <property name="PGETask_Name" value="LabcasUploadExecuteTask" />
      <property name="PGETask_ConfigFilePath"
        value="[LABCAS_HOME]/workflows/waf/pge-configs/waf-crawler.pgeconfig.xml"
        envReplace="true" />
      <property name="PGETask_DumpMetadata" value="true" />
      <property name="PCS_WorkflowManagerUrl" value="[WORKFLOW_URL]" envReplace="true" />
      <property name="PCS_FileManagerUrl" value="[FILEMGR_URL]" envReplace="true" />
      <property name="PCS_MetFileExtension" value="met" />
      <property name="PCS_ClientTransferServiceFactory" value="org.apache.oodt.cas.filemgr.datatransfer.LocalDataTransferFactory" />
      <property name="PCS_ActionRepoFile" value="file:[LABCAS_HOME]/cas-crawler/policy/crawler-config.xml" envReplace="true" />
      <property name="PCS_ActionsIds" value="LabcasPostIngestionAction"/>
    </configuration>
    
  </task>

</cas:tasks>
