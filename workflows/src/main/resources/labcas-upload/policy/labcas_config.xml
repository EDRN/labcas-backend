<!-- XML snippet containing configuration for default ECAS metadata fields -->

<configuration>
    
    <!-- dataset (aka product type) metadata -->    
    
    <!-- LabCAS core metadata: 
         "DatasetId": product type "id", "name"
         "Description": product type "description"
    -->      
    <property name="input.dataset.DatasetId.type" value="http://www.w3.org/2001/XMLSchema/string" />
    <property name="input.dataset.DatasetId.title" value="Dataset Identifier" />
    <property name="input.dataset.DatasetId.description" value="Unique identifier for this dataset (letters only, no spaces)" />
    <property name="input.dataset.DatasetId.required" value="true" />
        
    <property name="input.dataset.Description.type" value="http://www.w3.org/2001/XMLSchema/string" />
    <property name="input.dataset.Description.title" value="Dataset Description" />
    <property name="input.dataset.Description.description" value="Longer description for this dataset (a few sentences)." />
    <property name="input.dataset.Description.required" value="false" />
    
    <!--  ECAS metadata -->
    <property name="input.dataset.ProtocolName.type" value="http://edrn.nci.nih.gov/xml/schema/types.xml#protocolName" />
    <property name="input.dataset.ProtocolName.title" value="Protocol Name" />
    <property name="input.dataset.ProtocolName.description" value="String from Protocol Name controlled vocabulary" />
    <property name="input.dataset.ProtocolName.required" value="true" />
    
    <property name="input.dataset.ProtocolId.type" value="http://edrn.nci.nih.gov/xml/schema/types.xml#protocolId" />
    <property name="input.dataset.ProtocolId.title" value="Protocol ID" />
    <property name="input.dataset.ProtocolId.description" value="Number from Protocol Name controlled vocabulary" />
    <property name="input.dataset.ProtocolId.required" value="true" />
    
    <property name="input.dataset.LeadPI.type" value="http://edrn.nci.nih.gov/xml/schema/types.xml#principalInvestigator" />
    <property name="input.dataset.LeadPI.title" value="Lead PI" />
    <property name="input.dataset.LeadPI.description" value="Lead Principal Investigator" />
    <property name="input.dataset.LeadPI.required" value="true" />
    
    <property name="input.dataset.DatasetName.type" value="http://www.w3.org/2001/XMLSchema/string" />
    <property name="input.dataset.DatasetName.title" value="Dataset Name" />
    <property name="input.dataset.DatasetName.description" value="Short description for this dataset (one sentence)." />
    <property name="input.dataset.DatasetName.required" value="true" />
    
    <property name="input.dataset.MethodDetails.type" value="http://www.w3.org/2001/XMLSchema/string" />
    <property name="input.dataset.MethodDetails.title" value="Method Details" />
    <property name="input.dataset.MethodDetails.description" value="Description of investigation methods." />
    <property name="input.dataset.MethodDetails.required" value="false" />
    
    <property name="input.dataset.DataCustodian.type" value="http://www.w3.org/2001/XMLSchema/string" />
    <property name="input.dataset.DataCustodian.title" value="Data Custodian" />
    <property name="input.dataset.DataCustodian.description" value="Full name of dataset custodian" />
    <property name="input.dataset.DataCustodian.required" value="true" />
    
    <property name="input.dataset.DataCustodianEmail.type" value="http://www.w3.org/2001/XMLSchema/string" />
    <property name="input.dataset.DataCustodianEmail.title" value="Data Custodian Email" />
    <property name="input.dataset.DataCustodianEmail.description" value="Email address of dataset custodian" />
    <property name="input.dataset.DataCustodianEmail.required" value="true" />
    
    <property name="input.dataset.CollaborativeGroup.type" value="http://edrn.nci.nih.gov/xml/schema/types.xml#collaborativeGroup" />
    <property name="input.dataset.CollaborativeGroup.title" value="Collaborative Group" />
    <property name="input.dataset.CollaborativeGroup.description" value="EDRN Organ Collaborative Group (select one)" />
    <property name="input.dataset.CollaborativeGroup.required" value="true" />
    
    <property name="input.dataset.OrganSite.type" value="http://edrn.nci.nih.gov/xml/schema/types.xml#organSite" />
    <property name="input.dataset.OrganSite.title" value="Organ Site" />
    <property name="input.dataset.OrganSite.description" value="EDRN Organ Site (select all that apply)" />
    <property name="input.dataset.OrganSite.required" value="false" />
    
    <property name="input.dataset.PubMedId.type" value="http://edrn.nci.nih.gov/xml/schema/types.xml#discipline" />
    <property name="input.dataset.PubMedId.title" value="Pub Med ID" />
    <property name="input.dataset.PubMedId.description" value="URL of PubMed publication" />
    <property name="input.dataset.PubMedId.required" value="false" />
    
    <property name="input.dataset.Discipline.type" value="http://edrn.nci.nih.gov/xml/schema/types.xml#discipline" />
    <property name="input.dataset.Discipline.title" value="Discipline" />
    <property name="input.dataset.Discipline.description" value="Medical discipline for this dataset (select one)" />
    <property name="input.dataset.Discipline.required" value="false" />

    <!-- file (aka product) metadata -->
    
    <!-- ECAS metadata -->
    <property name="input.file.ProductDescription.type" value="http://www.w3.org/2001/XMLSchema/string" />
    <property name="input.file.ProductDescription.title" value="Product Description" />
    <property name="input.file.ProductDescription.description" value="Description of what this specific product file contains and any additional information allowing for facilitated understanding of contents" />
    <property name="input.file.ProductDescription.required" value="false" />
    
    <property name="input.file.DataStage.type" value="http://edrn.nci.nih.gov/xml/schema/types.xml#dataStage" />
    <property name="input.file.DataStage.title" value="Data Stage" />
    <property name="input.file.DataStage.description" value="Wether the data is processed or unprocessed (select one)" />
    <property name="input.file.DataStage.required" value="false" />
    
    <property name="input.file.InstrumentDetails.type" value="http://www.w3.org/2001/XMLSchema/string" />
    <property name="input.file.InstrumentDetails.title" value="Instrument Details" />
    <property name="input.file.InstrumentDetails.description" value="If an instrument, software product, etc. was used to generate the data" />
    <property name="input.file.InstrumentDetails.required" value="false" />
    
    <property name="input.file.ContentFunction.type" value="http://www.w3.org/2001/XMLSchema/string" />
    <property name="input.file.ContentFunction.title" value="Content Function" />
    <property name="input.file.ContentFunction.description" value="The function of this file. (e.g. Analysis)" />
    <property name="input.file.ContentFunction.required" value="false" />
    
    <property name="input.file.ProductMethodDetails.type" value="http://www.w3.org/2001/XMLSchema/string" />
    <property name="input.file.ProductMethodDetails.title" value="Product Method Details" />
    <property name="input.file.ProductMethodDetails.description" value="If different from Dataset Method" />
    <property name="input.file.ProductMethodDetails.required" value="false" />
    
    <property name="input.file.SpecimenType.type" value="http://edrn.nci.nih.gov/xml/schema/types.xml#specimenType" />
    <property name="input.file.SpecimenType.title" value="Specimen Type" />
    <property name="input.file.SpecimenType.description" value="The specimen type (select all that apply)" />
    <property name="input.file.SpecimenType.required" value="false" />
    
    <property name="input.file.RecommendedSoftware.type" value="http://www.w3.org/2001/XMLSchema/string" />
    <property name="input.file.RecommendedSoftware.title" value="Recommended Software" />
    <property name="input.file.RecommendedSoftware.description" value="List any software that may be used to analyze, view, etc. the data" />
    <property name="input.file.RecommendedSoftware.required" value="false" />
    

    <!-- output products -->
    <property name="output.product.type" value="urn:edrn:LabcasProduct"/>
      
</configuration>