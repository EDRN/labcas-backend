<cas:tasks xmlns:cas="http://oodt.jpl.nasa.gov/1.0/cas">

  <task id="urn:edrn:LabcasUploadInitTask" name="LabcasUploadInitTask" class="gov.nasa.jpl.edrn.labcas.tasks.LabcasUploadInitTaskInstance">
  
    <conditions />
  
    <configuration>
    
      <!-- input parameters -->      
      <property name="input.Dataset.type" value="string" />
      <property name="input.Dataset.title" value="Dataset Name" />
      <property name="input.Dataset.description" value="Unique identifier for this dataset (letters only, no spaces)" />
      <property name="input.Dataset.required" value="true" />
      
      <property name="input.DatasetName.type" value="string" />
      <property name="input.DatasetName.title" value="Dataset Name" />
      <property name="input.DatasetName.description" value="One sentence that describes this dataset" />
      <property name="input.DatasetName.required" value="true" />
      
      <property name="input.ProtocolId.type" value="integer" />
      <property name="input.ProtocolId.title" value="Protocol ID" />
      <property name="input.ProtocolId.description" value="Number for the medical protocol identifier" />
      <property name="input.ProtocolId.required" value="true" />
      
      <property name="input.LeadPI.type" value="string" />
      <property name="input.LeadPI.title" value="Lead PI" />
      <property name="input.LeadPI.description" value="Name of lead Principal Investigator" />
      <property name="input.LeadPI.required" value="true" />
      
      <!-- output products -->
      <property name="output.product.type" value="urn:edrn:LabcasFile"/>
      
    </configuration>
    
    <requiredMetFields>
      <metfield name="Dataset" />
      <metfield name="DatasetName" />
      <metfield name="ProtocolId" />
      <metfield name="LeadPI" />
    </requiredMetFields>
    
  </task>


  <task id="urn:edrn:LabcasUploadExecuteTask" name="LabcasUploadExecuteTask" class="org.apache.oodt.cas.pge.StdPGETaskInstance">
  
    <conditions />
  
    <configuration>
      <property name="PGETask_Name" value="LabcasUploadExecuteTask" />
      <property name="PGETask_ConfigFilePath"
        value="[LABCAS_HOME]/workflows/labcas-upload/pge-configs/labcas-upload-execute-task-config.pgeconfig.xml"
        envReplace="true" />
      <property name="PGETask_DumpMetadata" value="true" />
      <property name="PCS_WorkflowManagerUrl" value="[WORKFLOW_URL]" envReplace="true" />
      <property name="PCS_FileManagerUrl" value="[FILEMGR_URL]" envReplace="true" />
      <property name="PCS_MetFileExtension" value="met" />
      <property name="PCS_ClientTransferServiceFactory" value="org.apache.oodt.cas.filemgr.datatransfer.LocalDataTransferFactory" />
      <property name="PCS_ActionRepoFile" value="file:[OODT_HOME]/cas-crawler/policy/crawler-config.xml"
        envReplace="true" />
    </configuration>
    
  </task>

</cas:tasks>
