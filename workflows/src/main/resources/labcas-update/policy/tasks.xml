<cas:tasks xmlns:cas="http://oodt.jpl.nasa.gov/1.0/cas">

  <task id="urn:edrn:LabcasUpdateTask" name="LabcasUpdateTask" class="gov.nasa.jpl.edrn.labcas.tasks.LabcasUpdateTaskInstance">
  
    <conditions />
  
    <configuration>
        
      <!-- input parameters -->      

      <!-- CAS metadata: 
           "DatasetId": product type "id", "name"
           "Description": product type "description"
      -->      
      <property name="input.DatasetId.type" value="string" />
      <property name="input.DatasetId.title" value="Dataset Identifier" />
      <property name="input.DatasetId.description" value="Unique identifier for this dataset (letters only, no spaces)" />
      <property name="input.DatasetId.required" value="true" />
      
      <property name="input.Description.type" value="string" />
      <property name="input.Description.title" value="Dataset Description" />
      <property name="input.Description.description" value="Longer description for this dataset (a few sentences)." />
      <property name="input.Description.required" value="true" />
      
      <!--  ECAS metadata -->
      <property name="input.DatasetName.type" value="string" />
      <property name="input.DatasetName.title" value="Dataset Name" />
      <property name="input.DatasetName.description" value="Short description for this dataset (one sentence)." />
      <property name="input.DatasetName.required" value="true" />
      
      <property name="input.ProtocolId.type" value="integer" />
      <property name="input.ProtocolId.title" value="Protocol ID" />
      <property name="input.ProtocolId.description" value="Number for the medical protocol identifier" />
      <property name="input.ProtocolId.required" value="true" />
      
      <property name="input.LeadPI.type" value="string" />
      <property name="input.LeadPI.title" value="Lead PI" />
      <property name="input.LeadPI.description" value="Name of lead Principal Investigator" />
      <property name="input.LeadPI.required" value="true" />
      
      <property name="input.Discipline.type" value="string" />
      <property name="input.Discipline.title" value="Discipline" />
      <property name="input.Discipline.description" value="Medical discipline for this dataset" />
      <property name="input.Discipline.required" value="false" />
      
      <!-- output products -->
      <property name="output.product.type" value="urn:edrn:LabcasFile"/>
            
    </configuration>
    
    <requiredMetFields>
      <!-- 
        only required metadata field is DatasetId 
        all other fields are optional on update
      -->
      <metfield name="DatasetId" />
    </requiredMetFields>
    
  </task>

</cas:tasks>
