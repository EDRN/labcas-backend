<cas:tasks xmlns:cas="http://oodt.jpl.nasa.gov/1.0/cas">

  <task id="urn:edrn:RnaSequencePipelineInit" name="RnaSequencePipelineInit" class="gov.nasa.jpl.edrn.labcas.tasks.LabcasInitTaskInstance">
  
    <conditions />
  
    <configuration>
    
      <!-- input parameters -->
            
      <property name="input.genome_index.type" value="string" />
      <property name="input.genome_index.title" value="Genome Index" />
      <property name="input.genome_index.description" value="The basename of the genome index to be searched." />
      <property name="input.genome_index.value.1" value="genome" />
      
      <property name="input.sample_id.type" value="string" />
      <property name="input.sample_id.title" value="Sample ID" />
      <property name="input.sample_id.description" value="Unique identifier of the lung adenocarcinoma sample to be used." />
      <property name="input.sample_id.value.1" value="ERR164503" />
      
      <!-- output products -->
      <property name="output.product.type" value="urn:edrn:RnaSequencePipelineOutputFile"/>
      
    </configuration>
    
    <requiredMetFields>
      <metfield name="genome_index" />
      <metfield name="sample_id" />
    </requiredMetFields>
    
  </task>


  <task id="urn:edrn:RnaSequencePipelineTask1" name="RnaSequencePipelineTask1" class="org.apache.oodt.cas.pge.StdPGETaskInstance">
  
    <conditions />
  
    <configuration>
      
      <!-- OODT Workflow arguments -->
      <property name="PGETask_Name" value="RnaSequencePipelineTask1" />
      <property name="PGETask_ConfigFilePath" 
                value="[LABCAS_HOME]/workflows/rnaseq-pipeline/pge-configs/rnaseq-pipeline-task1-config.pgeconfig.xml"
                envReplace="true" />
      <property name="PGETask_DumpMetadata" value="true" />
      <property name="PCS_WorkflowManagerUrl" value="[WORKFLOW_URL]" envReplace="true" />
      <property name="PCS_FileManagerUrl" value="[FILEMGR_URL]" envReplace="true" />
      <property name="PCS_MetFileExtension" value="met" />
      <property name="PCS_ClientTransferServiceFactory" value="org.apache.oodt.cas.filemgr.datatransfer.LocalDataTransferFactory" />
      <!-- <property name="PCS_ActionRepoFile" value="file:[OODT_HOME]/cas-crawler/policy/crawler-config.xml" envReplace="true" /> -->
     
      <!-- specific script arguments -->
      <property name="num_threads" value="12" />
      <property name="gene_transcript_file" value="genes.gtf" />
      <property name="data_dir" value="[RNASEQ_DATA_DIR]" />
      <property name="output_dir" value="thout" />
     
    </configuration>
    
    <requiredMetFields>
      <metfield name="genome_index" />
      <metfield name="sample_id" />
    </requiredMetFields>
    
  </task>
  
  <task id="urn:edrn:RnaSequencePipelineTask2" name="RnaSequencePipelineTask2" class="org.apache.oodt.cas.pge.StdPGETaskInstance">
  
    <conditions />
  
    <configuration>
      
      <!-- OODT Workflow arguments -->
      <property name="PGETask_Name" value="RnaSequencePipelineTask2" />
      <property name="PGETask_ConfigFilePath" 
                value="[LABCAS_HOME]/workflows/rnaseq-pipeline/pge-configs/rnaseq-pipeline-task2-config.pgeconfig.xml"
                envReplace="true" />
      <property name="PGETask_DumpMetadata" value="true" />
      <property name="PCS_WorkflowManagerUrl" value="[WORKFLOW_URL]" envReplace="true" />
      <property name="PCS_FileManagerUrl" value="[FILEMGR_URL]" envReplace="true" />
      <property name="PCS_MetFileExtension" value="met" />
      <property name="PCS_ClientTransferServiceFactory" value="org.apache.oodt.cas.filemgr.datatransfer.LocalDataTransferFactory" />
      <!-- <property name="PCS_ActionRepoFile" value="file:[OODT_HOME]/cas-crawler/policy/crawler-config.xml" envReplace="true" /> -->
     
      <requiredMetFields>
        <metfield name="genome_index" />
        <metfield name="sample_id" />
      </requiredMetFields>
    
    </configuration>
    
  </task>
  
  <task id="urn:edrn:RnaSequencePipelineTask3" name="RnaSequencePipelineTask3" class="org.apache.oodt.cas.pge.StdPGETaskInstance">
  
    <conditions />
  
    <configuration>
      
      <!-- OODT Workflow arguments -->
      <property name="PGETask_Name" value="RnaSequencePipelineTask3" />
      <property name="PGETask_ConfigFilePath" 
                value="[LABCAS_HOME]/workflows/rnaseq-pipeline/pge-configs/rnaseq-pipeline-task3-config.pgeconfig.xml"
                envReplace="true" />
      <property name="PGETask_DumpMetadata" value="true" />
      <property name="PCS_WorkflowManagerUrl" value="[WORKFLOW_URL]" envReplace="true" />
      <property name="PCS_FileManagerUrl" value="[FILEMGR_URL]" envReplace="true" />
      <property name="PCS_MetFileExtension" value="met" />
      <property name="PCS_ClientTransferServiceFactory" value="org.apache.oodt.cas.filemgr.datatransfer.LocalDataTransferFactory" />
      <property name="PCS_ActionRepoFile" value="file:[OODT_HOME]/cas-crawler/policy/crawler-config.xml" envReplace="true" />
     
      <requiredMetFields>
        <metfield name="genome_index" />
        <metfield name="sample_id" />
      </requiredMetFields>
    
    </configuration>
    
  </task>

</cas:tasks>
