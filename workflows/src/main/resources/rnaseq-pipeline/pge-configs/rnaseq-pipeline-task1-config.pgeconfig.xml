<?xml version="1.0" encoding="UTF-8"?>
<pgeConfig>

    <customMetadata>
      <metadata key="ProductionDateTime" val="[DATE.UTC]" />
      <metadata key="JobDir" val="[PGE_ROOT]/rnaseq-pipeline/jobs/[sample_id]" />
    </customMetadata>

	<!-- PGE commands -->
    <!-- FIXME: tophat-test -->
    <exe dir="[JobDir]" shell="/bin/bash">
      <!-- must update PATH with location of executables -->
      <cmd>export PATH=[PATH]:[PGE_ROOT]/rnaseq-pipeline/tophat</cmd>
      <cmd>export PATH=[PATH]:[PGE_ROOT]/rnaseq-pipeline/bowtie2</cmd>
      <cmd>cd [JobDir]</cmd>
      <!-- cleanup from previous executions -->
      <cmd>rm -rf thout</cmd>
      <cmd>rm -rf logs</cmd>
      <cmd>rm tophat.log</cmd>
      <!-- execute command -->
      <cmd>python [LABCAS_HOME]/workflows/rnaseq-pipeline/pges/rnaseq-pipeline-task1.py\
           --num_threads [num_threads] --gene_transcript_file [gene_transcript_file]\
           --genome_index [genome_index] --exe_dir [PGE_ROOT]/rnaseq-pipeline/tophat-test --data_dir [data_dir] --output_dir [output_dir] --sample_id [sample_id]</cmd>
    </exe>
  

</pgeConfig>