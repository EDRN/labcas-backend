<?xml version="1.0" encoding="UTF-8"?>
<pgeConfig>

  <!-- PGE commands -->
  <exe dir="[JobDir]" shell="/bin/bash">
    <!-- must execute R script in a separate directory -->
    <cmd>cd [PGE_ROOT]/nist/pges</cmd>
    <!-- copy latest uploaded data -->
    <cmd>cp [LABCAS_STAGING]/[DatasetId]/[DatasetId]*.txt .</cmd>
    <!-- run R script (only for Labs 005-008) -->
    <!-- must use ((..)) notation because [...] is parsed by OODT for env replacement -->
    <cmd>
         LabNumber=[LabNumber]
         if (( $LabNumber == '005' )) || (( $LabNumber == '006' )) || (( $LabNumber == '007' )) || (( $LabNumber == '008' ))
         then 
            Rscript --vanilla SingleLab_SingleRound_C.R Lab[LabNumber]_[Method] R[RoundNumber] 
         fi
    </cmd>
    <!-- move output back to stangin area -->
    <!-- suppress error message if plot file does not exist -->
    <cmd>mv Rplots.pdf [LABCAS_STAGING]/[DatasetId]/. 2&gt;/dev/null; true</cmd>
    <!-- remove latest uploaded data -->
    <cmd>rm [DatasetId]*.txt</cmd>
  </exe>
  
  <customMetadata>
    <metadata key="ProductionDateTime" val="[DATE.UTC]" />
    <metadata key="JobDir" val="[PGE_ROOT]/nist/jobs/[DatasetId]" />
  </customMetadata>
  
</pgeConfig>