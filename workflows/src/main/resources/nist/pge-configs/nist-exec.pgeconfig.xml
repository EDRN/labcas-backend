<?xml version="1.0" encoding="UTF-8"?>
<pgeConfig>

  <!-- PGE commands -->
  <exe dir="[JobDir]" shell="/bin/bash">
    <!-- must execute R script in a separate directory -->
    <cmd>cd [PGE_ROOT]/workflows/nist/pges</cmd>
    <!-- copy latest uploaded data -->
    <cmd>cp [LABCAS_STAGING]/[DatasetId]/[DatasetId]* .</cmd>
    <!-- run R script -->
    <cmd>Rscript ./Updated_R03.R</cmd>
    <!-- move output back to stangin area -->
    <cmd>mv Rplots.pdf [LABCAS_STAGING]/[DatasetId]/Rplots.pdf</cmd>
    <!-- remove latest uploaded data -->
    <cmd>rm [DatasetId]* .</cmd>
  </exe>
  
  <customMetadata>
    <metadata key="ProductionDateTime" val="[DATE.UTC]" />
    <metadata key="JobDir" val="[PGE_ROOT]/nist/jobs/job-[ProductionDateTime]" />
  </customMetadata>
  
</pgeConfig>