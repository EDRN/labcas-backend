<?xml version="1.0" encoding="UTF-8"?>
<pgeConfig>

  <!-- PGE commands -->
  <exe dir="[JobDir]" shell="/bin/bash">
    <!-- must execute R script in a separate directory -->
    <cmd>cd [PGE_ROOT]/nist/pges</cmd>
    <!-- copy latest uploaded data -->
    <cmd>cp [LABCAS_STAGING]/[DatasetId]/[DatasetId]*.txt .</cmd>
    <!-- run R script -->
    <cmd>RScript --vanilla ModSingleLab_SingleRound.R [LabNumber]_[Method] R[RoundNumber]</cmd>
    <!-- move output back to stangin area -->
    <cmd>mv Rplots.pdf [LABCAS_STAGING]/[DatasetId]/Rplots.pdf</cmd>
    <!-- remove latest uploaded data -->
    <cmd>rm [DatasetId]*.txt</cmd>
  </exe>
  
  <customMetadata>
    <metadata key="ProductionDateTime" val="[DATE.UTC]" />
    <metadata key="JobDir" val="[PGE_ROOT]/nist/jobs/[DatasetId]" />
  </customMetadata>
  
</pgeConfig>