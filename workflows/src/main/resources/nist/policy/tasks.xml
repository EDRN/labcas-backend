<cas:tasks xmlns:cas="http://oodt.jpl.nasa.gov/1.0/cas">

  <!-- standard LabcasUploadInitTaskInstance task configured with NIST specific metadata  -->
  <task id="urn:edrn:NistInitTask" name="NistInitTask" class="gov.nasa.jpl.edrn.labcas.tasks.LabcasUploadInitTaskInstance">
  
    <conditions />
    
    <configuration>
    
      <!--  UI workflow order -->
      <property name="workflow.order" value="2" />
    
      <!-- fixed dataset metadata -->
      <property name="dataset.ParentDatasetId" value="NistProduct" />
      <!-- FIXME -->
      <!-- <property name="dataset.Dataset" value="Lab005_C_R03" /> -->
    
      <!-- input dataset metadata -->
      <property name="input.dataset.DatasetId.type" value="http://edrn.nci.nih.gov/xml/schema/types.xml#nistDatasetId" />
      <property name="input.dataset.DatasetId.title" value="Dataset Identifier" />
      <property name="input.dataset.DatasetId.description" value="Enter a unique identifier for this data" />
      <property name="input.dataset.DatasetId.required" value="true" />
      <!-- <property name="input.dataset.DatasetId.format" value="Lab[LabNumber]_[NormalizationMethod]_R[RoundNumber]" /> -->
      
      <property name="input.dataset.LabNumber.type" value="http://www.w3.org/2001/XMLSchema/string" />
      <property name="input.dataset.LabNumber.title" value="Lab Number" />
      <property name="input.dataset.LabNumber.description" value="Laboratory where the data was collected." />
      <property name="input.dataset.LabNumber.required" value="true" />
      <property name="input.dataset.LabNumber.value.1" value="001" />
      <property name="input.dataset.LabNumber.value.2" value="002" />
      <property name="input.dataset.LabNumber.value.3" value="003" />
      <property name="input.dataset.LabNumber.value.4" value="004" />
      <property name="input.dataset.LabNumber.value.5" value="005" />
      <property name="input.dataset.LabNumber.value.6" value="006" />
      <property name="input.dataset.LabNumber.value.7" value="007" />
      <property name="input.dataset.LabNumber.value.8" value="008" />
      
      <property name="input.dataset.NormalizationMethod.type" value="http://www.w3.org/2001/XMLSchema/string" />
      <property name="input.dataset.NormalizationMethod.title" value="Normalization Method" />
      <property name="input.dataset.NormalizationMethod.description" value="Technique used to normalize the data." />
      <property name="input.dataset.NormalizationMethod.required" value="true" />
      <property name="input.dataset.NormalizationMethod.value.1" value="A" />
      <property name="input.dataset.NormalizationMethod.value.2" value="B" />
      <property name="input.dataset.NormalizationMethod.value.3" value="C" />
      <property name="input.dataset.NormalizationMethod.value.4" value="D" />
      <property name="input.dataset.NormalizationMethod.value.5" value="E" />
      
      <property name="input.dataset.RoundNumber.type" value="http://www.w3.org/2001/XMLSchema/string" />
      <property name="input.dataset.RoundNumber.title" value="Round Number" />
      <property name="input.dataset.RoundNumber.description" value="Submission number corresponding to a given sample number." />
      <property name="input.dataset.RoundNumber.required" value="true" />
      <property name="input.dataset.RoundNumber.value.1" value="01" />
      <property name="input.dataset.RoundNumber.value.2" value="02" />
      <property name="input.dataset.RoundNumber.value.3" value="03" />
            
      <property name="input.dataset.LeadPI.type" value="http://edrn.nci.nih.gov/xml/schema/types.xml#principalInvestigator" />
      <property name="input.dataset.LeadPI.title" value="Lead PI" />
      <property name="input.dataset.LeadPI.description" value="Begin typing an EDRN investigator name. A list of options will appear." />
      <property name="input.dataset.LeadPI.required" value="true" />
      
      <property name="input.dataset.DataCollectionDate.type" value="http://www.w3.org/2001/XMLSchema/date" />
      <property name="input.dataset.DataCollectionDate.title" value="Data Collection Date" />
      <property name="input.dataset.DataCollectionDate.description" value="Date when the data was collected (YYYY-MM-DD)." />
      <property name="input.dataset.DataCollectionDate.required" value="true" />
      
      <property name="input.dataset.SampleProcessingProtocols.type" value="http://www.w3.org/2001/XMLSchema/string" />
      <property name="input.dataset.SampleProcessingProtocols.title" value="Sample Processing Protocols" />
      <property name="input.dataset.SampleProcessingProtocols.description" 
                value="How the samples were processed prior to be run on the instrumentation.
                      Examples: library preparation, labeling, amplification method., ...
                      Kits and reagents: specify source and catalog numbers."/> 
      <property name="input.dataset.SampleProcessingProtocols.required" value="true" />

      <property name="input.dataset.InstrumentationTechnologyCode.type" value="http://www.w3.org/2001/XMLSchema/string" />
      <property name="input.dataset.InstrumentationTechnologyCode.title" value="Instrumentation Technology Code" />
      <property name="input.dataset.InstrumentationTechnologyCode.description" value="Select the instrumentation technology code." />
      <property name="input.dataset.InstrumentationTechnologyCode.required" value="true" />
      <property name="input.dataset.InstrumentationTechnologyCode.value.1" value="HYB" />
      <property name="input.dataset.InstrumentationTechnologyCode.value.2" value="NGS" />
      <property name="input.dataset.InstrumentationTechnologyCode.value.3" value="PCR" />
      <property name="input.dataset.InstrumentationTechnologyCode.value.4" value="Other" />
          
      <property name="input.dataset.Manufacturer.type" value="http://www.w3.org/2001/XMLSchema/string" />
      <property name="input.dataset.Manufacturer.title" value="Manufacturer" />
      <property name="input.dataset.Manufacturer.description" value="Manufacturer of the instrument used to analyze the data." />
      <property name="input.dataset.Manufacturer.required" value="true" />
      
      <property name="input.dataset.ModelNumber.type" value="http://www.w3.org/2001/XMLSchema/string" />
      <property name="input.dataset.ModelNumber.title" value="Model Number" />
      <property name="input.dataset.ModelNumber.description" value="Model number of the instrument." />
      <property name="input.dataset.ModelNumber.required" value="true" />
  
      <property name="input.dataset.DataProcessingProtocols.type" value="http://www.w3.org/2001/XMLSchema/string" />
      <property name="input.dataset.DataProcessingProtocols.title" value="Data Processing Protocols" />
      <property name="input.dataset.DataProcessingProtocols.description" value="Prior to upload: alignment algorithms, data filtering, normalization, ..." />
      <property name="input.dataset.DataProcessingProtocols.required" value="true" />
  
      <property name="input.dataset.OwnerPrincipal.type" value="urn:ldap:attributes:dn" />
      <property name="input.dataset.OwnerPrincipal.title" value="Share data with..." />
      <property name="input.dataset.OwnerPrincipal.description" 
                value="Select or remove the groups with whom youâ€™d like to share this data." />
      <property name="input.dataset.OwnerPrincipal.required" value="true" />
      <property name="input.dataset.OwnerPrincipal.visible" value="false" />
      
    </configuration>
          
    <requiredMetFields>
    
      <metfield name="DatasetId" />
      <metfield name="LabNumber" />
      <metfield name="NormalizationMethod" />
      <metfield name="RoundNumber" />
      <metfield name="LeadPI" />
      <metfield name="DataCollectionDate" />
      <metfield name="SampleProcessingProtocols" />
      <metfield name="InstrumentationTechnologyCode" />
      <metfield name="Manufacturer" />
      <metfield name="ModelNumber" />
      <metfield name="DataProcessingProtocols" />
      <metfield name="OwnerPrincipal" />
      
    </requiredMetFields>
    
  </task>
  
  <!-- Task that converts NIST input files (.txt) into standard format (.nist) -->
  <task id="urn:edrn:NistConvertTask" name="NistConvertTask" class="org.apache.oodt.cas.pge.StdPGETaskInstance">
  
    <conditions />
  
    <configuration>
      <property name="PGETask_Name" value="NistConvertTask" />
      <property name="PGETask_ConfigFilePath"
        value="[LABCAS_HOME]/workflows/nist/pge-configs/nist-convert.pgeconfig.xml"
        envReplace="true" />
      <property name="PGETask_DumpMetadata" value="true" />
      <property name="PCS_WorkflowManagerUrl" value="[WORKFLOW_URL]" envReplace="true" />
      <property name="PCS_FileManagerUrl" value="[FILEMGR_URL]" envReplace="true" />
      <property name="PCS_MetFileExtension" value="met" />
      <property name="PCS_ClientTransferServiceFactory" value="org.apache.oodt.cas.filemgr.datatransfer.LocalDataTransferFactory" />
      <property name="PCS_ActionRepoFile" value="file:[OODT_HOME]/cas-crawler/policy/crawler-config.xml"
        envReplace="true" />
    </configuration>
    
  </task>
  
  <!-- Task that runs the R script -->
  <task id="urn:edrn:NistExecTask" name="NistExecTask" class="org.apache.oodt.cas.pge.StdPGETaskInstance">
  
    <conditions />
  
    <configuration>
      <property name="PGETask_Name" value="NistExecTask" />
      <property name="PGETask_ConfigFilePath"
        value="[LABCAS_HOME]/workflows/nist/pge-configs/nist-exec.pgeconfig.xml"
        envReplace="true" />
      <property name="PGETask_DumpMetadata" value="true" />
      <property name="PCS_WorkflowManagerUrl" value="[WORKFLOW_URL]" envReplace="true" />
      <property name="PCS_FileManagerUrl" value="[FILEMGR_URL]" envReplace="true" />
      <property name="PCS_MetFileExtension" value="met" />
      <property name="PCS_ClientTransferServiceFactory" value="org.apache.oodt.cas.filemgr.datatransfer.LocalDataTransferFactory" />
      <property name="PCS_ActionRepoFile" value="file:[OODT_HOME]/cas-crawler/policy/crawler-config.xml"
        envReplace="true" />
    </configuration>
    
  </task>
  
  
  <!-- Task that crawls $LABCAS_STAGING/$DatasetId and publishes files to $LABCAS_ARCHIVE/$ParentDatasetId/$DatasetId -->
  <task id="urn:edrn:NistCrawlTask" name="NistCrawlTask" class="org.apache.oodt.cas.pge.StdPGETaskInstance">
  
    <conditions />
  
    <configuration>
      <property name="PGETask_Name" value="LabcasUploadExecuteTask" />
      <property name="PGETask_ConfigFilePath"
        value="[LABCAS_HOME]/workflows/nist/pge-configs/nist-crawler.pgeconfig.xml"
        envReplace="true" />
      <property name="PGETask_DumpMetadata" value="true" />
      <property name="PCS_WorkflowManagerUrl" value="[WORKFLOW_URL]" envReplace="true" />
      <property name="PCS_FileManagerUrl" value="[FILEMGR_URL]" envReplace="true" />
      <property name="PCS_MetFileExtension" value="met" />
      <property name="PCS_ClientTransferServiceFactory" value="org.apache.oodt.cas.filemgr.datatransfer.LocalDataTransferFactory" />
      <property name="PCS_ActionRepoFile" value="file:[OODT_HOME]/cas-crawler/policy/crawler-config.xml"
        envReplace="true" />
    </configuration>
    
  </task>

</cas:tasks>
