<cas:tasks xmlns:cas="http://oodt.jpl.nasa.gov/1.0/cas">

  <!-- standard LabcasUploadInitTaskInstance task configured with NIST specific metadata  -->
  <task id="urn:edrn:NistInitTask" name="NistInitTask" class="gov.nasa.jpl.edrn.labcas.tasks.LabcasUploadInitTaskInstance">
  
    <conditions />
    
    <configuration>
    
      <!-- fixed dataset metadata -->
      <property name="dataset.ParentDatasetId" value="NistProduct" />
    
      <!-- input dataset metadata -->
      <property name="input.dataset.DatasetId.type" value="http://www.w3.org/2001/XMLSchema/string" />
      <property name="input.dataset.DatasetId.title" value="Dataset Identifier" />
      <property name="input.dataset.DatasetId.description" value="Unique identifier for this dataset (letters only, no spaces)" />
      <property name="input.dataset.DatasetId.required" value="true" />
      
      <property name="input.dataset.LeadPI.type" value="http://edrn.nci.nih.gov/xml/schema/types.xml#principalInvestigator" />
      <property name="input.dataset.LeadPI.title" value="Lead PI" />
      <property name="input.dataset.LeadPI.description" value="Lead Principal Investigator" />
      <property name="input.dataset.LeadPI.required" value="true" />
      
      <property name="input.dataset.Instrument.type" value="http://www.w3.org/2001/XMLSchema/string" />
      <property name="input.dataset.Instrument.title" value="Instrument" />
      <property name="input.dataset.Instrument.description" value="Name of the instrument used to collect data." />
      <property name="input.dataset.Instrument.required" value="true" />
    
      <property name="input.dataset.Lab.type" value="http://www.w3.org/2001/XMLSchema/string" />
      <property name="input.dataset.Lab.title" value="Lab" />
      <property name="input.dataset.Lab.description" value="Laboratory where the data was collected." />
      <property name="input.dataset.Lab.required" value="true" />
      
      <property name="input.dataset.Date.type" value="http://www.w3.org/2001/XMLSchema/date" />
      <property name="input.dataset.Date.title" value="Lab" />
      <property name="input.dataset.Date.description" value="Date when the data was collected (yyyy/mm/dd)." />
      <property name="input.dataset.Date.required" value="true" />
      
      <property name="input.dataset.OwnerGroup.type" value="urn:ldap:attributes:dn" />
      <property name="input.dataset.OwnerGroup.title" value="Owner Group" />
      <property name="input.dataset.OwnerGroup.description" value="Distinguished Name of the person that owns the data." />
      <property name="input.dataset.OwnerGroup.required" value="true" />
      <property name="input.dataset.OwnerGroup.visible" value="false" />
      
    </configuration>
          
    <requiredMetFields>
    
      <metfield name="DatasetId" />
      <metfield name="LeadPI" />
      <metfield name="Instrument" />
      <metfield name="Lab" />
      <metfield name="Date" />
      <metfield name="OwnerGroup" />
            
    </requiredMetFields>
    
  </task>
  
  <!-- Task that converts NIST input files (.txt) into standard format (.nist) -->
  <task id="urn:edrn:NistConvertTask" name="NistConvertTask" class="org.apache.oodt.cas.pge.StdPGETaskInstance">
  
    <conditions />
  
    <configuration>
      <property name="PGETask_Name" value="NistConvertTask" />
      <property name="PGETask_ConfigFilePath"
        value="[LABCAS_HOME]/workflows/nist/pge-configs/nist-convert.pgeconfig.xml"
        envReplace="true" />
      <property name="PGETask_DumpMetadata" value="true" />
      <property name="PCS_WorkflowManagerUrl" value="[WORKFLOW_URL]" envReplace="true" />
      <property name="PCS_FileManagerUrl" value="[FILEMGR_URL]" envReplace="true" />
      <property name="PCS_MetFileExtension" value="met" />
      <property name="PCS_ClientTransferServiceFactory" value="org.apache.oodt.cas.filemgr.datatransfer.LocalDataTransferFactory" />
      <property name="PCS_ActionRepoFile" value="file:[OODT_HOME]/cas-crawler/policy/crawler-config.xml"
        envReplace="true" />
    </configuration>
    
  </task>
  
  <!-- Task that builds the application URL, adds it to the metadata -->
  <task id="urn:edrn:NistExecTask" name="NistExecTask" class="gov.nasa.jpl.edrn.labcas.tasks.nist.NistExecuteTaskInstance">
    <conditions />
    <configuration>
      <property name="baseURL" value="http://shiny.jpl.nasa.gov/" />
    </configuration>
  </task>

  <!-- Task that crawls $LABCAS_STAGING/$DatasetId and publishes files to $LABCAS_ARCHIVE/$ParentDatasetId/$DatasetId -->
  <task id="urn:edrn:NistCrawlTask" name="NistCrawlTask" class="org.apache.oodt.cas.pge.StdPGETaskInstance">
  
    <conditions />
  
    <configuration>
      <property name="PGETask_Name" value="LabcasUploadExecuteTask" />
      <property name="PGETask_ConfigFilePath"
        value="[LABCAS_HOME]/workflows/nist/pge-configs/nist-crawler.pgeconfig.xml"
        envReplace="true" />
      <property name="PGETask_DumpMetadata" value="true" />
      <property name="PCS_WorkflowManagerUrl" value="[WORKFLOW_URL]" envReplace="true" />
      <property name="PCS_FileManagerUrl" value="[FILEMGR_URL]" envReplace="true" />
      <property name="PCS_MetFileExtension" value="met" />
      <property name="PCS_ClientTransferServiceFactory" value="org.apache.oodt.cas.filemgr.datatransfer.LocalDataTransferFactory" />
      <property name="PCS_ActionRepoFile" value="file:[OODT_HOME]/cas-crawler/policy/crawler-config.xml"
        envReplace="true" />
    </configuration>
    
  </task>

</cas:tasks>
