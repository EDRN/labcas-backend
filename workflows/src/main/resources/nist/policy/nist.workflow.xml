<cas:workflow xmlns:cas="http://oodt.jpl.nasa.gov/1.0/cas" name="NistWorkflow" id="urn:edrn:NistWorkflow">

  <tasks>
  
    <!-- provides wortkflow configuration to clients -->
    <task id="urn:edrn:NistConfigTask" />
    
    <!-- converts files in the staging area from .txt to .nist format -->
    <task id="urn:edrn:NistConvertTask" />
    
    
    <!-- builds the application URL and adds the link to the workflow metadata -->
    <task id="urn:edrn:NistExecuteTask" /> 
    
    <!-- crawls the staging area and publishes the files -->
    <task id="urn:edrn:NistCrawlTask" />
    
  </tasks>

</cas:workflow>
