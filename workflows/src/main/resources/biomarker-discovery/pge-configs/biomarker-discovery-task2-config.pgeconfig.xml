<?xml version="1.0" encoding="UTF-8"?>
<pgeConfig>
        <!-- PGE instructions -->
        <exe dir="[JobDir]" shell="/bin/bash">
          <cmd>cd [PGE_ROOT]/biomarker_discovery</cmd>
          <cmd>R --no-save &lt; ./scripts/PipelineScript.R --args [ncv] [prefix] [PGE_ROOT]/biomarker_discovery</cmd>
          <cmd>mv [prefix]_iter_[ncv].txt results/cv/.</cmd>
        </exe>

        <customMetadata>
             <metadata key="ProductionDateTime" val="[DATE.UTC]"/>
             <metadata key="JobDir" val="[PGE_ROOT]/biomarker_discovery/jobs/job-[ProductionDateTime]"/>
        </customMetadata>

</pgeConfig>
