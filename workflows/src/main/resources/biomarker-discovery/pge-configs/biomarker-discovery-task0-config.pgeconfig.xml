<?xml version="1.0" encoding="UTF-8"?>
<pgeConfig>
        <!-- example: sh Submit.sh 3 "JPL_NatMed_Gender_Classification" "/data/staging/pge_root/biomarker-discovery" -->
        <exe dir="[JobDir]" shell="/bin/bash">
          <cmd>cd [PGE_ROOT]/biomarker_discovery</cmd>
          <cmd>sh Submit.sh [ncv] [prefix] [PGE_ROOT]/biomarker_discovery</cmd>
        </exe>

        <customMetadata>
             <metadata key="ProductionDateTime" val="[DATE.UTC]"/>
             <metadata key="JobDir" val="[PGE_ROOT]/biomarker_discovery/jobs/job-[ProductionDateTime]"/>
	</customMetadata>
</pgeConfig>
